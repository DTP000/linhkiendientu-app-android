<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img.detail"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

        <ImageButton
            android:id="@+id/ib.btn.back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_button"
            android:textColor="#C0C0C0"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

            <ImageButton
                android:id="@+id/ib.btn.favourite"
                android:layout_marginTop="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/round_button"
                android:layout_marginLeft="305dp"
                android:textColor="#C0C0C0"
                app:srcCompat="@drawable/ic_baseline_favorite_white_24" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv.product.name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rau tươi"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginLeft="18dp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv.product.price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/colorPrimary"
                android:textColor="#EFECEC"
                android:text="100.000 vnđ"
                android:textSize="18dp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_above="@+id/linear_mua"
            android:layout_below="@+id/linear_thongtin"
            android:layout_marginStart="@dimen/margin_1"
            android:layout_marginTop="@dimen/margin_1"
            android:layout_marginEnd="@dimen/margin_1"
            android:background="@color/fifth"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <TextView
                android:id="@+id/mota_chitiet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:text="@string/mo_ta_san_pham"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/backgrouddetail">
            <TextView
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:padding="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_sub_quality"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="@color/white"
                    app:srcCompat="@drawable/ic_baseline_remove_24" />
                <TextView
                    android:layout_marginTop="7dp"
                    android:id="@+id/quantity.detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="0"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    />

                <ImageButton
                    android:id="@+id/btn_add_quality"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/round_button"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#C0C0C0"
                    app:srcCompat="@drawable/ic_baseline_add_24" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/addcart">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm vào giỏ hàng"
                android:padding="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/fifth"
                android:gravity="center_vertical|center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>